<script>

     

    $(document).ready(()=>{    
        
        console.log("ready");

        try{

         $('#btnmenu-app').on('click','#btn-app',function(){
            console.log("test");
            evt.preventDefault(); 
            if($(this).attr('button-type'))
                window.location.href="/visitor?buttontype="+$(this).attr(button-type);
            else
                window.location.href = "visitor/qr";
            
            });
        }
        catch(err){
            console.error(err);
        }
        /*navigator */
        $(function(){
       
       $(".vertical-nav a").on("click",(evt)=>{
        console.log("running:" + $(evt.currentTarget).attr("data-href").search("contact"));
           if($(evt.currentTarget).attr("data-href").search("contact")>-1){
               console.log("ajax");
              $.ajax({
                   url:$(evt.currentTarget).attr("data-href"),
                   type:'GET',
                   error: (err)=>{
                       console.log(err);
                   },
                   success:(data)=>{
                       console.log("data");
                       $("#dashboard").html(data);
                   }
                });
               

           }
           else
              window.location.href = $(evt.currentTarget).attr("data-href");
       });

        });

}); 
    
function showNotification(title,prompt){

    $("#data-app-confirm-title").html(title);
    $("#data-app-confirm-prompt").html(prompt);
    $("#data-menu-notifiction").showMenu();

}
 
</script>
